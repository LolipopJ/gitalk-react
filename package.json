{
  "name": "gitalk-react",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "files": [
    "dist"
  ],
  "main": "./dist/gitalk.umd.cjs",
  "module": "./dist/gitalk.js",
  "exports": {
    ".": {
      "import": "./dist/gitalk.js",
      "require": "./dist/gitalk.umd.cjs"
    },
    "./gitalk.css": "./dist/gitalk-light.css",
    "./gitalk-light.css": "./dist/gitalk-light.css",
    "./gitalk-dark.css": "./dist/gitalk-dark.css",
    "./gitalk.scss": "./lib/themes/gitalk-light.scss",
    "./gitalk-light.scss": "./lib/themes/gitalk-light.scss",
    "./gitalk-dark.scss": "./lib/themes/gitalk-dark.scss"
  },
  "scripts": {
    "dev": "vite",
    "build": "npm run build:ts && npm run build:scss",
    "build:ts": "tsc -b && vite build",
    "build:scss": "vite build --config vite.config.scss.ts",
    "lint": "npm run lint:ts && npm run lint:scss",
    "lint:ts": "eslint . --fix",
    "lint:scss": "stylelint lib/**/*.scss --fix",
    "preview": "vite preview"
  },
  "dependencies": {
    "ahooks": "^3.8.4",
    "dayjs": "^1.11.13",
    "github-markdown-css": "*",
    "i18next": "^24.0.0",
    "octokit": "^4.0.0",
    "react-flip-move": "^3.0.0",
    "react-i18next": "^15.0.0"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.24.0",
    "@octokit/types": "^14.0.0",
    "@types/node": "^22.14.1",
    "@types/react": "^16.8.0",
    "@types/react-dom": "^16.8.0",
    "@vitejs/plugin-react": "^4.4.0",
    "eslint": "^9.24.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-prettier": "^5.2.6",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "globals": "^16.0.0",
    "prettier": "^3.5.3",
    "react": "^16.8.0",
    "react-dom": "^16.8.0",
    "rollup-plugin-visualizer": "^5.14.0",
    "sass-embedded": "^1.86.3",
    "stylelint": "^16.18.0",
    "stylelint-config-recess-order": "^6.0.0",
    "stylelint-config-standard-scss": "^14.0.0",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.30.1",
    "vite": "^6.3.0",
    "vite-plugin-dts": "^4.5.3"
  }
}
